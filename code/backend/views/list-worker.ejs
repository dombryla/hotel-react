<% include partials/header.ejs %>
    <table class='table'>
        <thead>    
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Sex</th>
                <!-- <th>Birth Day</th> -->
                <th>Email</th>
                <th>PhoneNumber</th>
                <!-- <th>Street</th> -->
                <!-- <th>PostCode</th> -->
                <th>City</th>
                <!-- <th>PESEL</th> -->
                <th>Salary</th>
                <th>Position</th>
                <th>StartDate</th>
                <th>TerminationDate</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% employees.forEach((worker, i) => { %>
                <tr>
                    <th><%= i+1 %></th>
                    <td><%= worker.firstName %></td>
                    <td><%= worker.lastName %></td>
                    <td><%= worker.sex %></td>
                    <!-- <td><%= worker.birthDate %></td> -->
                    <td><%= worker.email %></td>
                    <td><%= worker.phoneNumber %></td>
                    <!-- <td><%= worker.street %></td> -->
                    <!-- <td><%= worker.postCode %></td> -->
                    <td><%= worker.city %></td>
                    <!-- <td><%= worker.pesel %></td> -->
                    <td><%= worker.salary %></td>
                    <td><%= worker.position %></td>
                    <td><%= worker.startDate %></td>
                    <td><%= worker.terminationDate %></td>
                    <td>
                        <% if(worker.managerId) { %>
                            <a href="/edit/<%= worker.managerId %>"  class="">Edit</a>
                            <a href="/delete/<%= worker.managerId %>" class="">Delete</a>
                        <% }else{ %>
                            <a href="/edit/<%= worker.employeeId %>"  class="">Edit</a>
                            <a href="/delete/<%= worker.employeeId %>" class="">Delete</a>
                        <% } %> 
                    </td>
                </tr>
            <% }) %>
        </tbody>

        
    </table>

</body>
</html>