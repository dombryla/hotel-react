<% include partials/header.ejs %>
    <div class='container-add-worker'>
        <div class='form-wrapper'>
            <form action='' method='post'>
                <fieldset> 
                    <legend>Employee details</legend>
                    <table>
                        <tr>
                            <td>Login</td> 
                            <td><input type='text' name='login' id='login' required readonly='true' value='<%= worker.login %>' ></td>
                        </tr>      
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.login) { %> 
                                    <span class='errorMessage'><%= errors.login.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>              
                        <tr>
                            <td>Password</td> 
                            <td><input type='password' name='password' id='password' required> </td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.password) { %> 
                                    <span class='errorMessage'><%= errors.password.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>First Name</td>
                            <td><input type='text' name='firstName' id='firstName' required value='<%= worker.firstName %>'>  </td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.firstName) { %> 
                                    <span class='errorMessage'><%= errors.firstName.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Last Name</td> 
                            <td><input type='text' name='lastName' id='lastName' required value='<%= worker.lastName %>'></td> 
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.lastName) { %> 
                                    <span class='errorMessage'><%= errors.lastName.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Sex</td>
                            <td>                            
                                <label>Famale <input type='radio' value='f' name='sex' required></label>
                                <label>Male <input type='radio' value='m' name='sex'></label>
                            </td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.sex) { %> 
                                    <span class='errorMessage'><%= errors.sex.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Birthday</td>
                            <td><input type='date' name='birthDate' name='birthDate' id='birthDate' value='<%= worker.birthDate %>' required></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.birthDate) { %> 
                                    <span class='errorMessage'><%= errors.birthDate.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><input type='email' name='email' id='email' required value='<%= worker.email %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.email) { %> 
                                    <span class='errorMessage'><%= errors.email.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Phone Number</td>
                            <td><input type='text' name='phoneNumber' id='phoneNumber' required value='<%= worker.phoneNumber %>'> </td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.phoneNumber) { %> 
                                    <span class='errorMessage'><%= errors.phoneNumber.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Street</td>
                            <td><input type='text' name='street' id='street' required value='<%= worker.street %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.street) { %> 
                                    <span class='errorMessage'><%= errors.street.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Post Code</td>
                            <td><input type='text' name='postCode' id='postCode' required value='<%= worker.postCode %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.postCode) { %> 
                                    <span class='errorMessage'><%= errors.postCode.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>City</td>
                            <td><input type='text' name='city' id='city' required value='<%= worker.city %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.city) { %> 
                                    <span class='errorMessage'><%= errors.city.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>PESEL</td>
                            <td><input type='number' name='pesel' id='pesel' required value='<%= worker.pesel %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.pesel) { %> 
                                    <span class='errorMessage'><%= errors.pesel.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Salary</td>
                            <td><input type='number' name='salary' id='salary' required value='<%= worker.salary %>'></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.salary) { %> 
                                    <span class='errorMessage'><%= errors.salary.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Position</td>
                            <td>                    
                                <select id="position" name="position" required>
                                    <option selected disabled>Choose position</option>
                                    <option>Front Office Manager</option>
                                    <option>Receptionist</option>
                                    <option>Bellboy</option>
                                    <option>Executive Housekeeper</option>
                                    <option>Housekeeper</option>
                                    <option>Restaurant Manager</option>
                                    <option>Chef</option>
                                    <option>Cooks</option>
                                    <option>Waiter</option>
                                    <option>Bar Manager</option>
                                    <option>Barman</option>
                                    <option>Barist</option>
                                    <option>Technical Manager</option>
                                    <option>Conservator</option>
                                    <option>Accountant </option>
                                    <option>Event Planner</option>
                                    <option>Concierge</option>
                                    <option>Meeting Coordinator</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.position) { %> 
                                    <span class='errorMessage'><%= errors.position.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Start Date</td>
                            <td><input type='date' name='startDate' id='startDate' value='<%= worker.startDate%>' required></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.startDate) { %> 
                                    <span class='errorMessage'><%= errors.startDate.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td>Termination Date</td>
                            <td><input type='date' name='terminationDate' id='terminationDate' value='<%= worker.terminationDate %>' required></td>
                        </tr>
                        <tr>
                            <td colspan='2'>
                                <% if (errors && errors.terminationDate) { %> 
                                    <span class='errorMessage'><%= errors.terminationDate.msg %></span> 
                                <% } %>
                            </td> 
                        </tr>
                        <tr>
                            <td><input type='Submit' value='Update' class="hireButton"></td>
                        </tr>
                    </table>
                </fieldset>
            </form>      
        </div>
        <div>
            <img src='/img/core-values.jpg'>
        </div>
    </div>
</body>
</html>